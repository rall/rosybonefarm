generator client {
  provider      = "prisma-client-js"
  output        = "../node_modules/.prisma/client"
  binaryTargets = ["darwin-arm64", "linux-arm-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  name      String?
  role      Role     @default(USER)
  sales     Sale[]
}

model Slot {
  name      String     @id
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  eggsDozen EggsDozen?
}

model EggsDozen {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  slotName  String?  @unique
  sold      Boolean  @default(false)
  weight    Int
  slot      Slot?    @relation(fields: [slotName], references: [name])
  sale      Sale?
}

model Sale {
  userId      Int
  eggsDozenId Int       @unique
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  eggsDozen   EggsDozen @relation(fields: [eggsDozenId], references: [id])
  user        User      @relation(fields: [userId], references: [id])

  @@id([userId, eggsDozenId])
}

enum Role {
  USER
  ADMIN
}
