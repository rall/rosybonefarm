{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "launch stack",
			"dependsOn": "build api",
			"type": "shell",
			"command": "./stack.sh",
			"presentation": {
        "reveal": "always",
        "panel": "new"
      }
		},
		{
			"label": "serve farmstand",
			"dependsOn": "launch stack",
			"type": "shell",
			"command": "nx run farmstand:serve:development --watch --disable-host-check",
			"isBackground": true,
			"problemMatcher": {
				"owner": "farmstand",
				"base": "$tsc-watch",
				"background" : {
          "activeOnStart": true,
          "beginsPattern": "Generating browser application bundles (phase: emitting)\\.\\.\\.",
          "endsPattern": "Browser application bundle generation complete\\."
				}
			}
		},
		{
			"label": "build api",
			"type": "shell",
			"command": "nx run api:build --watch",
			"problemMatcher": {
				"owner": "farmstand",
				"base": "$tsc-watch",
				"background" : {
          "activeOnStart": true,
          "beginsPattern": "Issues checking in progress\\.\\.\\.",
          "endsPattern": "No issues found\\."
				}
			},
			"isBackground": true
		}
	]
}
